<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pocket_monsters"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET"/>
    
    <application
        android:name="com.example.pocket_monsters.PocketMonsters"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service 
        	android:enabled="true"
        	android:name=".EncounterService"/>
    	<activity
            android:name="com.example.pocket_monsters.LoginActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.pocket_monsters.MenuActivity"
            android:label="menu">
        </activity>
        <activity
            android:name="com.example.pocket_monsters.MapActivity"
            android:label="map">
        </activity>
        <activity
            android:name="com.example.pocket_monsters.EncountersActivity"
            android:label="notifications">
        </activity>
        <activity
            android:name="com.example.pocket_monsters.IndexActivity"
            android:label="index">
        </activity>
        <activity
            android:name="com.example.pocket_monsters.ItemsActivity"
            android:label="items">
        </activity>
        <activity
            android:name="com.example.pocket_monsters.GameActivity"
            android:label="items">
        </activity>
        <activity
            android:name="com.example.pocket_monsters.InfoActivity"
            android:label="items">
        </activity>
    </application>

</manifest>
